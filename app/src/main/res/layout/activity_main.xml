<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="send"
        android:text="点我发普通通知" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendCustom"
        android:text="点我发自定义通知"
        android:id="@+id/btn_top"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendGroup"
        android:layout_below="@id/btn_top"
        android:text="点我发组通知"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="sendThree"
        android:text="点我发三行通知"/>

    <Button
        android:id="@+id/btn_ainm"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_launcher"
        android:onClick="doAnim"
        android:text="123" />


    <LinearLayout
        android:id="@+id/ll_mute"
        android:layout_width="60dp"
        android:layout_height="220dp"
        android:layout_below="@id/btn_ainm"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:orientation="vertical" />
</RelativeLayout>